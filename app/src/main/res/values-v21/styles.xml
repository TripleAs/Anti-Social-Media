<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <attr name="feedBackground" format="reference"/>
    <attr name="gradientBackground" format="reference"/>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_gradient_2</item>
        <item name="colorPrimaryDark">@color/blue_gradient_2</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="colorAccent">@color/blue_gradient_3</item>
        <item name="gradientBackground">@drawable/title_gradient</item>
        <!--<item name="android:windowBackground">@drawable/title_gradient</item>-->

    </style>

    <style name="AppTheme.Toolbar" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
    </style>

    <style name="GroupRedTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/red_gradient_2</item>
        <item name="colorAccent">@color/white</item>
        <item name="feedBackground">@drawable/feed_red_gradient</item>
    </style>

    <style name="GroupBlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_gradient_2</item>
        <item name="colorAccent">@color/white</item>
        <item name="feedBackground">@drawable/feed_blue_gradient</item>
    </style>

    <style name="GroupGreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/green_gradient_2</item>
        <item name="colorAccent">@color/white</item>
        <item name="feedBackground">@drawable/feed_green_gradient</item>
    </style>

    <style name="TextWithShadow">
        <item name="android:shadowColor">@color/black_60_transparent</item>
        <item name="android:shadowDx">-5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">0.1</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/blue_gradient_3</item>
        <item name="android:minHeight">10dip</item>
    </style>

</resources>
